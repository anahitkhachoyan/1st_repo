import numpy
import time
import pwn_dac
import signal_generator as sg

amplitude = 1.2
signal_frequency = 10.0
sampling_frequency = 1000.0
tim = 0.0

if name == "__main__":
    try:
        while True:
            try:
                voltage = amplitude * sg.get_sin_wawe_amplitude(signal_frequency, tim)
                pwn_dac.dac.set_voltage(voltage)
                sg.wait_for_sampling_period(sampling_frequency)
                tim = tim + 1 / sampling_frequency
                
            except ValueError:
                print("Вы ввели не число. Попробуйте еще раз")
                
    finally:
        pwn_dac.dac.deinit()
